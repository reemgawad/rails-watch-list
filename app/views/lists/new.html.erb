<h1 class='text-center my-4'>Add a new list</h1>

<div class='container'>
  <div class='row d-flex justify-content-center'>
    <div class='col-sm-6'>
      <%= simple_form_for [ @list ] do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file %>
        <%= f.submit "Add list", class: "btn btn-outline-danger" %>
      <% end %>
    </div>
  </div>
</div>
