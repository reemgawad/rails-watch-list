<div class="banner mb-5" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1535016120720-40c646be5580?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80);">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-trip col-sm m-3">
        <img src="<%= bookmark.movie.poster_url %>"/>
        <div class="card-trip-infos">
          <div class="mb-3">
            <h2><%= bookmark.movie.title %></h2>
            <p><%= bookmark.movie.overview %></p>
          </div>
        </div>
        <div class="comment">
          <i class="fa-solid fa-quote-left"></i>
          <p><em><%= bookmark.comment %></em></p>
        </div>
        <h2 class="card-trip-pricing">
          <%= link_to bookmark_path(bookmark), method: :delete do %>
            <i class="fa-solid fa-trash-can"></i>
          <% end %>
        </h2>
      </div>
    <% end %>
  </div>
</div>

<div class="btn-container">
  <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-outline-danger mt-5" %>
</div>
